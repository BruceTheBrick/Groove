<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Groove.Samples.Pages.HomePage.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:homePage="clr-namespace:Groove.Samples.Pages.HomePage"
    x:DataType="homePage:HomePageViewModel">
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="{Binding Title}"
            VerticalOptions="Center" />
        <Button Command="{Binding NavigateToCreditsCommand}" Text="To Credits" />
    </VerticalStackLayout>
</ContentPage>